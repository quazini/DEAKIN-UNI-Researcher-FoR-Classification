# ============================================================
# FoR Classification System - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control
# ============================================================

# === SUPABASE CONFIGURATION ===
# Get these from your Supabase project settings
# https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here

# === WEBHOOK CONFIGURATION ===
# Your n8n webhook URL for FoR classification
# Format: https://your-n8n-instance.com/webhook/webhook-id
DEFAULT_WEBHOOK_URL=https://mbcrc.app.n8n.cloud/webhook/530ec5fa-656a-4c9c-bb05-5be7ff3bdef2

# === NEO4J CONFIGURATION (Optional) ===
# Only required if using Neo4j for researcher data
NEO4J_URI=neo4j+s://your-neo4j-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# === ADMIN CONFIGURATION ===
# Default admin credentials (change these!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeThisSecurePassword123!

# === APPLICATION SETTINGS ===
APP_NAME=FoR Classification System
APP_ENV=production
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOGIN_COOLDOWN_MINUTES=15

# === SECURITY SETTINGS ===
# Generate a secure secret key for session management
# You can generate one with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-minimum-32-characters

# === STREAMLIT CONFIGURATION ===
# These can override Streamlit default settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=50

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/app.log

# === OPTIONAL: EMAIL CONFIGURATION ===
# For sending notifications (if implemented)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
# NOTIFICATION_EMAIL=admin@example.com

# === OPTIONAL: BACKUP CONFIGURATION ===
# For automated backups (if using cloud storage)
# BACKUP_ENABLED=true
# BACKUP_INTERVAL_HOURS=24
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-backup-bucket
# AWS_REGION=us-east-1

# === OPTIONAL: MONITORING ===
# For application monitoring and alerts
# SENTRY_DSN=https://your-key@sentry.io/project-id
# DATADOG_API_KEY=your-datadog-api-key
# NEWRELIC_LICENSE_KEY=your-newrelic-key

# === OPTIONAL: FEATURE FLAGS ===
# Enable/disable specific features
ENABLE_DEBUG_MODE=false
ENABLE_ADMIN_PANEL=true
ENABLE_NEO4J_INTEGRATION=false
ENABLE_WEBHOOK_CACHING=true
CACHE_TTL_SECONDS=300

# === RATE LIMITING ===
# API rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=500

# === DOCKER SPECIFIC (if using Docker) ===
# These are typically set in docker-compose.yml but can be overridden here
# DOCKER_REGISTRY=registry.digitalocean.com
# DOCKER_IMAGE_TAG=latest

# ============================================================
# NOTES:
# 1. All sensitive values should be kept secret
# 2. Use strong, unique passwords
# 3. Regularly rotate secrets and API keys
# 4. Never expose this file publicly
# 5. Consider using a secrets management service in production
# ============================================================